{
  "name": "suggestion-service",
  "version": "1.0.0",
  "description": "Service to generate and sync search suggestions to Typesense",
  "main": "dist/run.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/run.js",
    "dev": "ts-node src/run.ts --serve",
    "generate": "ts-node src/run.ts --generate",
    "generate:consumer": "ts-node src/run.ts --generate --collection consumer-products",
    "generate:store": "ts-node src/run.ts --generate --collection store-products",
    "sync": "ts-node src/run.ts --sync",
    "sync:consumer": "ts-node src/run.ts --sync --collection consumer-products",
    "sync:store": "ts-node src/run.ts --sync --collection store-products",
    "sync:all": "npm run sync:consumer && npm run sync:store"
  },
  "keywords": ["typesense", "search", "suggestions"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typesense": "^1.7.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1"
  }
}
